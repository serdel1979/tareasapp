﻿@using Microsoft.AspNetCore.Identity;

@inject SignInManager<IdentityUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">
                Hola, @User.Identity.Name
            </span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-action="logout"
                  asp-controller="usuarios">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Salir
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link dark-text"
               asp-action="Registro"
               asp-controller="Usuarios">Registro</a>
        </li>
        <li class="nav-item">
            <a class="nav-link dark-text"
               asp-action="Login"
               asp-controller="Usuarios">Ingresar</a>
        </li>
    }
</ul>